{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist"
  },
  "include": [
    "scripts/**/*.mjs",
    "scripts/**/*.cjs",
    "scripts/.eslintrc.cjs",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "docs/**/*.mdx",
    "*.ts",
    "svelte.config.js",
    ".eslintrc.cjs",
    "scripts/check-files/index.mjs"
  ]
}
