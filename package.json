{
  "name": "@naco-ui/svelte",
  "version": "1.3.1",
  "publishConfig": {
    "access": "public",
    "directory": "./dist"
  },
  "scripts": {
    "dev": "NACO_VERSION='`dev`' storybook dev -p 6006",
    "hook": "simple-git-hooks",
    "build": "node scripts/build.mjs",
    "build-storybook": "storybook build",
    "release:bump": "standard-version --infile CHANGELOG.md --same-file --skip.commit --skip.tag",
    "preview": "NACO_VERSION='`preview`' pnpm storybook build && pnpm preview:serve",
    "preview:serve": "browser-sync start --port 6006 --server --ss ./storybook-static",
    "check": "pnpm run '/^check:.*/'",
    "check:files": "node ./scripts/check-files/index.mjs",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:types": "tsc",
    "check:spelling": "pnpm cspell -c .cspell.json './**/*.{md,mdx}'",
    "test": "vitest --run",
    "test:dev": "vitest --ui",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:format-check": "prettier --check .",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint 'src/**/*.{svelte,css,scss}'",
    "format": "pnpm run '/^format:.*/'",
    "format:scripts": "prettier --write . && eslint --fix .",
    "format:styles": "stylelint --fix 'src/**/*.{svelte,css,scss}'"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "sass": "^1.66.0",
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-storysource": "^7.6.17",
    "@storybook/addon-svelte-csf": "^4.1.0",
    "@storybook/blocks": "^7.6.17",
    "@storybook/manager-api": "^7.6.17",
    "@storybook/svelte": "^7.6.17",
    "@storybook/sveltekit": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^7.6.17",
    "@sveltejs/adapter-auto": "^3.1.0",
    "@sveltejs/kit": "^2.3.2",
    "@sveltejs/package": "^2.2.5",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.5.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/browser": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "browser-sync": "^2.29.3",
    "cspell": "^7.3.2",
    "cspell-cli": "github:streetsidesoftware/cspell-cli",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-svelte": "^2.35.1",
    "fast-glob": "^3.3.1",
    "happy-dom": "^13.1.4",
    "kleur": "^4.1.5",
    "nano-staged": "^0.8.0",
    "postcss": "^8.4.33",
    "postcss-html": "^1.5.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "publint": "^0.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.7",
    "simple-git-hooks": "^2.9.0",
    "standard-version": "^9.5.0",
    "storybook": "^7.6.17",
    "stylelint": "^15.10.3",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-scss": "^5.1.0",
    "svelte": "^4.2.3",
    "svelte-check": "^3.6.0",
    "terser": "^5.26.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.11",
    "vitest": "^1.2.0",
    "webdriverio": "^8.27.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "pre-push": "pnpm test"
  },
  "nano-staged": {
    "*.{js,jsx,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.svelte": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
