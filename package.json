{
  "name": "@naco-ui/svelte",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public",
    "directory": "./dist"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "hook": "simple-git-hooks",
    "build": "bash scripts/clean-build.sh",
    "build-storybook": "storybook build",
    "release:bump": "standard-version --infile CHANGELOG.md --same-file --skip.commit --skip.tag",
    "preview": "pnpm build-storybook && pnpm preview:serve",
    "preview:serve": "browser-sync start --port 6006 --server --ss ./storybook-static",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "spell-check": "cspell './**/*.{md,mdx}'",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:format-check": "prettier --plugin-search-dir . --check .",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint 'src/**/*.{svelte,css,scss}'",
    "format": "pnpm run '/^format:.*/'",
    "format:scripts": "prettier --plugin-search-dir . --write . && eslint --fix .",
    "format:styles": "stylelint --fix 'src/**/*.{svelte,css,scss}'"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "sass": "^1.66.0",
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-storysource": "^7.4.0",
    "@storybook/addon-svelte-csf": "^4.0.1",
    "@storybook/blocks": "^7.4.0",
    "@storybook/manager-api": "^7.4.0",
    "@storybook/svelte": "^7.4.0",
    "@storybook/sveltekit": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.4.0",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "@sveltejs/package": "^2.0.0",
    "@types/node": "^20.5.8",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.0.0",
    "browser-sync": "^2.29.3",
    "cspell": "^7.3.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-svelte": "^2.33.0",
    "nano-staged": "^0.8.0",
    "postcss": "^8.4.29",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "publint": "^0.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.66.1",
    "simple-git-hooks": "^2.9.0",
    "standard-version": "^9.5.0",
    "storybook": "^7.4.0",
    "stylelint": "^15.10.3",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-scss": "^5.1.0",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.34.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  },
  "nano-staged": {
    "*.{js,jsx,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.svelte": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{md,mdx}": [
      "cspell"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
